<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:attribute="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PetaniActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvhome"
        android:paddingBottom="60dp"
        android:orientation="vertical">

        <developer.shivam.crescento.CrescentoContainer
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="20dp"
            attribute:curvature="20dp"
            attribute:curvatureDirection="outward">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/background_gradient"/>

            <TextView
                android:id="@+id/txt_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Daftar Petani"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:textAlignment="center"
                android:fontFamily="@font/breeserif_regular"
                android:textColor="#000000"
                android:textSize="24sp" />

        </developer.shivam.crescento.CrescentoContainer>

        <ListView
            android:id="@+id/listpetani"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ListView
            android:id="@+id/listviewku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/lvprofile"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <developer.shivam.crescento.CrescentoContainer
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="20dp"
            attribute:curvature="20dp"
            attribute:curvatureDirection="outward">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/background_gradient"/>

            <TextView
                android:id="@+id/txt_kategori2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Profil"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:textAlignment="center"
                android:fontFamily="@font/breeserif_regular"
                android:textColor="#000000"
                android:textSize="24sp" />

        </developer.shivam.crescento.CrescentoContainer>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="60dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Ubah Profile"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:id="@+id/tvubahprofile"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="60dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Tentang E-Tani"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:gravity="center"
                android:id="@+id/tvtentang"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="60dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Hubungi Kami"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:id="@+id/tvhubkami"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="60dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Hapus Akun"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:id="@+id/tvhapusakun"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="60dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Logout"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:id="@+id/tvlogout"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
    </LinearLayout>
    <include android:id="@+id/qwerty" layout="@layout/nav_bawah"/>
</RelativeLayout>